<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_200"
    android:id="@+id/btnCard">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFilm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/titleNews"
            android:text="Judul"
            android:layout_toRightOf = "@+id/imgFilm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tglNews"
            android:text="Tanggal : "
            android:layout_toRightOf = "@+id/imgFilm"
            android:layout_below="@+id/titleNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/directorNews"
            android:text="Director : "
            android:layout_toRightOf = "@+id/imgFilm"
            android:layout_below="@+id/tglNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/descriptionNews"
            android:text="Description : "
            android:layout_toRightOf = "@+id/imgFilm"
            android:layout_below="@+id/directorNews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</androidx.cardview.widget.CardView>